<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="#dddddd"
    tools:context="souravapp.numberguessinggame.game">

    <TextView
        android:id="@+id/results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:text="Results :"
        tools:ignore="HardcodedText,LabelFor,TextFields" />

    <EditText
        android:id="@+id/input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/results"
        android:layout_centerHorizontal="true"
        android:hint="Guessed Number"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="2"
        android:imeOptions="actionDone"
        android:paddingTop="20dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/lives"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="Lives : 30"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_margin="10dp"
        android:background="@android:drawable/editbox_background"
        tools:ignore="HardcodedText" />
    <TextView
        android:id="@+id/score"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="Score : 0"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_below="@id/lives"
        android:layout_marginLeft="15dp"
        android:background="@android:drawable/editbox_background"
        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />
    <Button
        android:id="@+id/rules"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Rules"
        android:layout_below="@id/score"
        android:layout_margin="20dp"
        android:background="@android:drawable/editbox_background"
        tools:ignore="HardcodedText" />


    <TextView
        android:id="@+id/range"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="@string/range_0_100"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_margin="10dp"
        android:background="@android:drawable/editbox_background"
        tools:ignore="RelativeOverlap" />
    <TextView
        android:id="@+id/high_score"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:text="High Score : 0"
        android:textSize="15sp"
        android:layout_below="@id/range"
        android:layout_marginRight="15dp"
        android:background="@android:drawable/editbox_background"
        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />
    <Button
        android:id="@+id/reset"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/high_score"
        android:layout_margin="20dp"
        android:background="@android:drawable/editbox_background"
        tools:ignore="HardcodedText" />

</RelativeLayout>